<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/autotutoria_background_color"
    android:orientation="vertical"
    android:textColor="@android:color/white"
    tools:context=".a_user_2_signup">

    <!-- Updated Section: Header with "SIGN UP" text and logos -->

    <!-- USERNAME -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:padding="6dp">

        <!-- Exit Button -->
        <Button
            android:id="@+id/exit_signup"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/arrow_left"
            android:backgroundTint="@color/backgroundColor" />

        <!-- SIGN UP Text -->
        <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/mouldy_cheese"
            android:letterSpacing="0.08"
            android:text="SIGN UP"
            android:textColor="#B5E6FA"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Mini Logos Container -->
        <LinearLayout
            android:id="@+id/logoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <!-- PNC Logo -->
            <ImageView
                android:id="@+id/pnc_signup"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/pnc_logo" />

            <!-- AutoTutoria Logo -->
            <ImageView
                android:id="@+id/autotutoria_logo"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/new_autotutoria_logo" />
        </LinearLayout>
    </RelativeLayout>

    <!-- USERNAME -->
    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_edit_text_with_border"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:inputType="text"
        android:hint="Username"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_serif"
        android:textColorHint="#77FFFFFF"
        android:paddingStart="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:textSize="14sp" />

    <!-- FULL NAME -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- FIRST NAME -->
        <EditText
            android:id="@+id/txtFirstName"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:background="@drawable/rounded_edit_text_with_border"
            android:textColor="@color/white"
            android:inputType="text"
            android:gravity="center_vertical"
            android:hint="First Name"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_serif"
            android:textColorHint="#77FFFFFF"
            android:paddingStart="16dp"
            android:textSize="14sp" />

        <!-- LAST NAME -->
        <EditText
            android:id="@+id/txtLastName"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:background="@drawable/rounded_edit_text_with_border"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:inputType="text"
            android:hint="Last Name"
            android:fontFamily="@font/roboto_serif"
            android:textStyle="bold"
            android:textColorHint="#77FFFFFF"
            android:paddingStart="16dp"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- EMAIL ADDRESS -->
    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edit_text_with_border"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:fontFamily="@font/roboto_serif"
        android:textStyle="bold"
        android:textColorHint="#77FFFFFF"
        android:paddingStart="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:textSize="14sp" />

    <!-- PASSWORD -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/rounded_edit_text_with_border"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp">

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:hint="Password"
            android:fontFamily="@font/roboto_serif"
            android:textColorHint="#77FFFFFF"
            android:textSize="14sp" />

        <!-- Show/Hide Password Button -->
        <ImageButton
            android:id="@+id/btnShowPassword"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/show_password" />
    </FrameLayout>

    <!-- CONFIRM PASSWORD -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text_with_border"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp">

        <EditText
            android:id="@+id/txtRetypePassword"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:fontFamily="@font/roboto_serif"
            android:textColorHint="#77FFFFFF"
            android:textSize="14sp" />

        <!-- Show/Hide Password Button -->
        <ImageButton
            android:id="@+id/btnShowRetypePassword"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/show_password" />
    </FrameLayout>

    <!-- BIRTHDATE -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Birthdate"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_serif"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <!-- DATE PICKER -->
    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:theme="@style/MyDatePickerStyle"/>

    <!-- GENDER -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Gender"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_serif"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_edit_text_with_border"
            android:padding="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="Male"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_serif"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_edit_text_with_border"
            android:padding="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="Female"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_serif"
            android:textSize="12sp" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/terms_and_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="36dp"
        android:fontFamily="@font/roboto_serif"
        android:text="Terms and Conditions"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold"
        />

    <!-- SIGN UP BUTTON -->
    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_serif"
        android:layout_marginHorizontal="10dp"
        android:text="Sign up"
        android:background="@drawable/rounded_corners"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_serif"
            android:text="Already have an account? "
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_serif"
            android:text="Sign in"
            android:textColor="#90EE90"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
