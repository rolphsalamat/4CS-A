    <string name="module1_1_5_title">Concatenation of Strings:</string>

    <string name="module1_1_5_content_1">Concatenation is the operation of joining two strings end-
to-end.</string>

    <string name="module1_1_5_content_2">Example: If u = "ab" and v = "c", then their concatenation
uv = "abc".</string>
