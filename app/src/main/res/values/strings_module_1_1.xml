    <string name="module1_1_2_title">Alphabets: </string>
    <string name="module1_1_2_content_1">An alphabet is a finite, non-empty set of symbols, often
represented by the Greek letter Σ.</string>
    <string name="module1_1_2_content_2">Examples:</string>
    <string name="module1_1_2_content_3">Binary alphabet: Σ = {0, 1}</string>
    <string name="module1_1_2_content_4">DNA alphabet: Σ = {A, C, G, T}</string>
    <string name="module1_1_2_content_5">English alphabet: Σ = {A...Z, a...z}</string>
    <string name="module1_1_2_content_6"></string>
    <string name="module1_1_2_content_7"></string>
    <string name="module1_1_2_content_8"></string>

    <!-- Module 1 | Page 3 -->
