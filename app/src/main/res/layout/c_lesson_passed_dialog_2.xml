<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="412dp"
        android:src="@drawable/passed_header_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/passed_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/passed_logo"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/background"

        />

    <TextView
        android:id="@+id/congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:fontFamily="@font/failed_font"
        app:layout_constraintTop_toBottomOf="@id/passed_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You passed lesson n"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/failed_font"
        app:layout_constraintTop_toBottomOf="@id/congratulations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/pre_test_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:text="Pre-Test Score: n/n"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/failed_font"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/post_test_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Post-Test Score: n/n"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/failed_font"
        app:layout_constraintTop_toBottomOf="@id/pre_test_score"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/okay_passed_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#4287f5"
        android:fontFamily="@font/failed_font"
        android:text="Okay"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toBottomOf="@+id/post_test_score" />

</androidx.constraintlayout.widget.ConstraintLayout>