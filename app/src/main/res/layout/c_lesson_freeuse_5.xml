<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/plain_background"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- EXIT BUTTON AND TEXT NEXT TO IT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp">

            <!-- Arrow Button -->
            <Button
                android:id="@+id/exitButton"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:background="@drawable/arrow_left"
                android:backgroundTint="#0FFFFF" />

            <!-- TextView Next to Arrow -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Module 5"
                android:fontFamily="@font/mouldy_cheese"
                android:textColor="#87CEEB"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Module #1 -->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/milk_cream"
            android:gravity="center_horizontal"
            android:text="@string/module_5"
            android:textAlignment="center"
            android:textColor="#87CEEB"
            android:textSize="28dp"
            android:textStyle="bold" />

        <!-- Module #1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:onClick="onCard1Clicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="20dp"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:paddingStart="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Lesson 1"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/module_5_1"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/freeuse_lesson_1_module_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="30dp"
                    android:text="0/4"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Module #2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:onClick="onCard2Clicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="20dp"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:paddingStart="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Lesson 2"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="80dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/module_5_2"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/freeuse_lesson_2_module_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="30dp"
                    android:text="0/4"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Module #3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:onClick="onCard3Clicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="20dp"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:paddingStart="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Lesson 3"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/module_5_3"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/freeuse_lesson_3_module_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="30dp"
                    android:text="0/4"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Automatic Bottom Margin -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            />

    </LinearLayout>

</ScrollView>
