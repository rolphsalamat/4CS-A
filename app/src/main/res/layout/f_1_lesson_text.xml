<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ScrollView contains the lesson content -->
    <LinearLayout
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_lesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Lesson Content"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/text_lesson_content_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In this lesson, we'll dive into the foundational concepts of alphabets and strings, essential building blocks in the study of formal languages and computational theory. An alphabet is a set of symbols, and a string is a sequence of these symbols. Understanding these basics is crucial as they form the basis for more complex topics such as languages, grammars, and automata that will be covered in future lessons."
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:justificationMode="inter_word"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4dp"
                android:lineSpacingMultiplier="1.2"/>

            <TextView
                android:id="@+id/text_lesson_content_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Another section of your lesson content."
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:justificationMode="inter_word"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4dp"
                android:lineSpacingMultiplier="1.2"/>

            <TextView
                android:id="@+id/text_lesson_content_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yet another section of your lesson content."
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:justificationMode="inter_word"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4dp"
                android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Next Button at the bottom -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Tap to Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:textSize="20sp"
        android:layout_marginHorizontal="16dp"/>

</LinearLayout>
