<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ScrollView contains the lesson content -->
    <LinearLayout
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_lesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Lesson Title"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/text_lesson_content_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson Content 1"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:justificationMode="inter_word"
                android:letterSpacing="0.0025"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.2"/>

            <TextView
                android:id="@+id/text_lesson_content_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson Content 2"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:justificationMode="inter_word"
                android:letterSpacing="0.0025"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.2"/>

            <TextView
                android:id="@+id/text_lesson_content_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson Content 3"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:justificationMode="inter_word"
                android:letterSpacing="0.0025"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Next Button at the bottom -->
    <Button
        android:id="@+id/tap_to_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Tap to Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:textSize="20sp"
        android:layout_marginHorizontal="16dp"/>

</LinearLayout>
