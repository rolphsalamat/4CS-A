<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/next_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ScrollView contains the lesson content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_lesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Lesson Title"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_gravity="center"/>

            <!-- Repeatable layout for each lesson content -->
            <!-- Horizontal layout for image and text side by side -->
            <LinearLayout
                android:id="@+id/content_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- ImageView for the bullet or sample image -->
                <ImageView
                    android:id="@+id/image_lesson_content_01"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="top"
                    android:layout_marginEnd="8dp"/>

                <!-- TextView for the text next to the image -->
                <TextView
                    android:id="@+id/text_lesson_content_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lesson Content 1"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.0025"
                    android:lineSpacingExtra="2dp"
                    android:lineSpacingMultiplier="1.2" />
            </LinearLayout>

            <!-- Repeat similar blocks for other contents, only changing the id -->
            <LinearLayout
                android:id="@+id/content_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

