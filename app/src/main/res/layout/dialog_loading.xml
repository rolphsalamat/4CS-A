<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/autotutoria_background_color">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/autotutoria_background_color"
        android:gravity="center">

        <!-- Use a LinearLayout to stack the ImageView and TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="688dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Image at the top -->
            <ImageView
                android:layout_width="263dp"
                android:layout_height="212dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="100dp"
                android:src="@drawable/updated_logo" />

            <!-- Text below the image -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/getto_funky"
                android:text="Autotutoria"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:textStyle="bold"/>

            <!-- MOTTO TEXT -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/honey_bread"
                android:text="Be your best self"
                android:textColor="#B5E6FA"
                android:textSize="30dp"
                android:textStyle="bold"/>

        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar_loading"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="65dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:layout_gravity="bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginBottom="40dp"
            android:text="Loading, please wait..."
            android:paddingTop="10dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="40dp" />

    </FrameLayout>

</LinearLayout>
