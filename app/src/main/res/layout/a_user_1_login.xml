<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:background="@drawable/autotutoria_background_color"
    tools:context=".b_main_0_menu">

    <!-- AUTOTUTORIA LOGO -->
    <ImageView
        android:id="@+id/AutoTutoria_logo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/new_autotutoria_logo" /> <!-- Make sure your logo is added to the drawable folder -->

    <!-- AUTOTUTORIA TEXT -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/getto_funky"
        android:text="AutoTutoria"
        android:textColor="@color/white"
        android:textSize="60sp" />

    <!-- MOTTO TEXT -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/honey_bread"
        android:text="Be your best self"
        android:textColor="#B5E6FA"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >

        <!-- DON'T HAVE AN ACCOUNT? -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_serif"
            android:gravity="center_horizontal"
            android:text="Don't have an account? "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!-- Signup button or other views can go here -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up!"
            android:textColor="#b5e6fa"
            android:textSize="16sp" />

    </LinearLayout>

