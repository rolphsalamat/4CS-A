<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:background="@drawable/autotutoria_background_color"
    tools:context=".b_main_0_menu">

    <!-- AUTOTUTORIA LOGO -->

    <!-- SIGNUP LAYER -->
    <ImageView
        android:id="@+id/AutoTutoria_logo"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/autotutoria_logo" />

    <LinearLayout
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- DON'T HAVE AN ACCOUNT? -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif"
            android:textColor="@color/white" />

        <!-- SIGN UP -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign up!"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif"
            android:textColor="#90EE90"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- CARD VIEW CONTAINING USERNAME, PASSWORD, FORGOT PASSWORD, AND LOGIN BUTTON -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:backgroundTint="#EEE"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- USERNAME FIELD -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/rounded_edit_text_with_border">

                <EditText
                    android:id="@+id/textUsername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_serif"
                    android:hint="Username"
                    android:inputType="text"
                    android:paddingStart="50dp"
                    android:textColor="@color/navy_blue"
                    android:textColorHint="#ABABAB"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/usernameIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/username" />

            </FrameLayout>

            <!-- PASSWORD FIELD -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/rounded_edit_text_with_border">

                <EditText
                    android:id="@+id/textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_serif"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="50dp"
                    android:textColor="@color/black"
                    android:textColorHint="#ABABAB"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/passwordIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/password" />

                <!-- Show/Hide Password Button -->
                <ImageButton
                    android:id="@+id/btnShowPassword"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/show_password" />

            </FrameLayout>

            <!-- SIGN IN BUTTON -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#1F46B5"
                android:fontFamily="@font/roboto_serif"
                android:text="Sign in"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="OnClick" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- FORGOT PASSWORD -->
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_serif"
        tools:ignore="OnClick" />

    <!-- MINI LOGOS -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/pnc_logo"
            android:layout_width="50dp"
            android:layout_height="211dp"
            app:srcCompat="@drawable/pnc_logo" />

        <ImageView
            android:id="@+id/miniautotutoria_logo"
            android:layout_width="50dp"
            android:layout_height="211dp"
            app:srcCompat="@drawable/autotutoria_logo" />

    </LinearLayout>
</LinearLayout>