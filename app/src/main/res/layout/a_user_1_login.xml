    <!-- CARD VIEW CONTAINING USERNAME, PASSWORD, AND LOGIN BUTTON -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        android:backgroundTint="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <!-- USERNAME FIELD -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/rounded_edit_text_with_border">

                <EditText
                    android:id="@+id/textUsername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_serif"
                    android:hint="Username"
                    android:inputType="text"
                    android:paddingStart="50dp"
                    android:textColor="@color/navy_blue"
                    android:textColorHint="#ABABAB"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/usernameIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/username" /> <!-- Reference your username icon in drawable -->
            </FrameLayout>

            <!-- PASSWORD FIELD -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/rounded_edit_text_with_border">

                <EditText
                    android:id="@+id/textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_serif"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="50dp"
                    android:textColor="@color/black"
                    android:textColorHint="#ABABAB"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/passwordIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/password" /> <!-- Reference your password icon in drawable -->

                <!-- Show/Hide Password Button -->
                <ImageButton
                    android:id="@+id/btnShowPassword"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/show_password" /> <!-- Reference your show/hide password icon in drawable -->

            </FrameLayout>

            <!-- SIGN IN BUTTON -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#1F46B5"
                android:fontFamily="@font/roboto_serif"
                android:text="Sign in"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- FORGOT PASSWORD -->
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_serif" />

    <!-- MINI LOGOS AT BOTTOM -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/pnc_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pnc_logo" /> <!-- Reference your PNC logo in drawable -->

        <ImageView
            android:id="@+id/miniautotutoria_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/autotutoria_logo" /> <!-- Reference your AutoTutoria logo in drawable -->
    </LinearLayout>

</LinearLayout>



