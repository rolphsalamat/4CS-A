<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Total Answers -->
    <TextView
        android:id="@+id/answers_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:text="Item: 1/5"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pre_test_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/answers_total"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:fontFamily="@font/mouldy_cheese"
        android:text="Pre-Test"
        android:textColor="#87CEEB"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Question will appear here"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/pre_test_text"
        android:layout_centerHorizontal="true"/>

    <RadioGroup
        android:id="@+id/choices_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:paddingStart="8dp"
        android:layout_below="@id/question_text"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true">
    </LinearLayout>

    <Button
        android:id="@+id/submit_pre_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:layout_alignParentBottom="true"
        android:text="Submit"
        android:textColor="@color/navy_blue"
        android:visibility="gone"
        />

</RelativeLayout>