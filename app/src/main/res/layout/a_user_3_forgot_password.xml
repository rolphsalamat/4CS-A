<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">


    <!-- Background Image -->
    <ImageView
        android:id="@+id/dialog_background"
        android:layout_width="match_parent"
        android:layout_height="691dp"
        android:layout_gravity="top"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/plain_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <!-- EXIT BUTTON AND TEXT NEXT TO IT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp">

        <!-- Arrow Button -->
        <Button
            android:id="@+id/exitButton"
            android:layout_width="30dp"
            android:layout_height="23dp"
            android:background="@drawable/arrow_left"
            android:backgroundTint="#FFFFFF" />

        <!-- TextView Next to Arrow -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="AutoTutoria"
            android:fontFamily="@font/getto_funky"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="600dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="173dp"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:contentDescription="Lock Icon"
            android:src="@drawable/forgot_password_logo" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/howdy_friend"
            android:gravity="center"
            android:text="Forgot your Password?"
            android:textColor="#E7E8FF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/garfiey"
            android:gravity="center"
            android:text="Enter your email and we'll send"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/garfiey"
            android:gravity="center"
            android:text="you a link to get back to your account."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />



        <EditText
            android:id="@+id/email_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background_cancel"
            android:fontFamily="@font/roboto_serif"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:backgroundTint="#03A9F4"
                android:fontFamily="@font/howdy_friend"
                android:text="Close"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/navy_blue"
                android:text="Reset"
                android:fontFamily="@font/howdy_friend"
                android:textColor="#fff" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
