<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add your post-test layout components here -->
    <TextView
        android:id="@+id/post_test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Test"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <!-- Example of post-test question -->
    <TextView
        android:id="@+id/post_test_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What did you learn from this lesson?"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/post_test_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your answer here"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/submit_post_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>
