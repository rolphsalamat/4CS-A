<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/failed_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/failed_logo"
        android:layout_gravity="center"
        android:layout_margin="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Failed"
        android:textColor="@color/white"
        android:fontFamily="@font/failed_font"
        android:textSize="48sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/lesson_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/failed_font"
        android:text="You did not meet the minimum passing grade in Lesson 1"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:padding="16sp"
        android:gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/bkt_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/failed_font"
            android:text="BKT Score:"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:paddingStart="30sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/passing_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/failed_font"
            android:text="Passing Grade:"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:paddingStart="30sp"
            android:layout_below="@id/bkt_score"
            android:layout_alignStart="@id/bkt_score"/>

        <Button
            android:id="@+id/okay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#95d3f4"
            android:fontFamily="@font/failed_font"
            android:textColor="@color/white"
            android:text="Okay"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>


</LinearLayout>