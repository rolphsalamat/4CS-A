<!-- fragment_pre_test.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plain_background"
    android:orientation="vertical">

    <!-- EXIT BUTTON AND TEXT NEXT TO IT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp">

        <!-- Arrow Button -->
        <Button
            android:id="@+id/exitButton"
            android:layout_width="30dp"
            android:layout_height="23dp"
            android:background="@drawable/arrow_left"
            android:backgroundTint="#0FFFFF" />

        <!-- TextView Next to Arrow -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Post-Test"
            android:fontFamily="@font/mouldy_cheese"
            android:textColor="#87CEEB"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/choices_group"
        android:layout_width="344dp"
        android:layout_height="655dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question will appear here"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Submit" />
    </RadioGroup>

</LinearLayout>
