<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add your post-test layout components here -->
    <TextView
        android:id="@+id/post_test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Test"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <!-- Example of post-test question -->
    <TextView
        android:id="@+id/post_test_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What did you learn from this lesson?"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/choices_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:orientation="vertical"
        android:padding="8dp" />

    <!-- Spacer view to push the button to the bottom -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

<!--    <Button-->
<!--        android:id="@+id/submit_post_test"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="SUBMIT"-->
<!--        android:background="@drawable/rounded_button"-->
<!--        android:textColor="@android:color/white"-->
<!--        android:textSize="18sp"-->
<!--        android:padding="12dp"-->
<!--        android:elevation="4dp"-->
<!--        android:layout_gravity="center"-->
<!--        />-->

    <Button
        android:id="@+id/submit_post_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp"/>

</LinearLayout>
