<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add your post-test layout components here -->
    <TextView
        android:id="@+id/post_test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Test"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/post_test_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What did you learn from this lesson?"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <RadioGroup
        android:id="@+id/choices_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:paddingStart="16dp"
        />

    <!-- EditText for Identification type question, collapsed by default -->
    <EditText
        android:id="@+id/identification_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your answer here"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <!-- Spacer view to push the button to the bottom -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/submit_post_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp" />

</LinearLayout>
