<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/autotutoria_background_color"
    android:padding="16dp">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/exit"
        android:backgroundTint="@color/white"
        android:contentDescription="Close"
        android:layout_margin="8dp" />

    <!-- Icon/Image -->
    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/close_button"
        android:src="@drawable/books_icon"
        android:contentDescription="Icon" />

    <!-- Proficiency Text -->
    <TextView
        android:id="@+id/proficiency_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif-condensed" />

    <!-- Retake Course Text -->
    <TextView
        android:id="@+id/retake_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/proficiency_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif-condensed" />

    <!-- Okay Button -->
    <Button
        android:id="@+id/okay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/retake_text"
        android:layout_marginTop="24dp"
        android:backgroundTint="#80D8FF"
        android:text="OKAY"
        android:textColor="#000000" />
</RelativeLayout>
