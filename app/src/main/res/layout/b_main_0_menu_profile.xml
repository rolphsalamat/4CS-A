        <FrameLayout
            android:id="@+id/profile_frame_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            >

            <!-- Background layer ShapeableImageView -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_background"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="3dp"
                android:src="#FFF"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/ImageViewCircle" />
            <!-- Foreground ShapeableImageView with profile picture -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/user_profile_picture"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:src="@drawable/default_male"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/ImageViewCircle" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:padding="4dp">
                <!-- Gray circle background for camera icon -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/autotutoria_background_color"
                    app:shapeAppearanceOverlay="@style/ImageViewCircle" />
                <!-- Camera icon -->
                <ImageView
                    android:id="@+id/change_profile_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/camera"
                    app:tint="@color/white" />
            </FrameLayout>
        </FrameLayout>

